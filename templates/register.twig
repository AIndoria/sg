{% extends 'main.twig' %}

{% block title %}{{'Admin'|trans}}{% endblock title %}

{% block content %}
<div class="container nomargin">
    <ul></ul>
    <div id="login-errors">
        {% if messages %}
            {{ message }}
        {% endif %}
    </div>
    <form action="/login" method="POST" id="login">
        <h1>Login</h1>
        <div class="form-input dark">
            <input type="text" name="username" placeholder="{{'Username'|trans}}" data-username>
        </div>
        <div class="form-input dark">
            <input type="password" name="password" placeholder="{{'Password'|trans}}" data-password>
        </div>
        <div class="form-input dark hidden" id="regcode">
            <input type="text" name="regcode" placeholder="{{'Registration Code'|trans}}" data-regcode>
        </div>
        <div class="form-input dark form-button float-right">
            <input class="btn float-right" type="submit" value="{{'Login'|trans}}">
            <button class="btn" id="regbtn">{{'Register'|trans}}</button>
        </div>
    </form>
</div>
{% endblock content %}
{% block scripts %}
{{ loadJS(['/static/js/login.min.js'], ['sha256-4RSPtT1YI3RaucYlHh8byLvT6VPTDWavJbQ9DZmrpI0=']) }}
{% endblock scripts %}